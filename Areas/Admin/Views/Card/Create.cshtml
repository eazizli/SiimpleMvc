@using SiimpleMvc.Models
@model Card
<form method="post" enctype="multipart/form-data">
    <input class="form-control form-control-lg" asp-for="Name" type="text" placeholder="Name">
    <input class="form-control" type="text" asp-for="IconName" placeholder="IconName">
    <input class="form-control form-control-lg" asp-for="Title" type="text" placeholder="Description">
    <div class="form-group">
        <label asp-for="Images" for="exampleFormControlFile1">Example file input</label>
        <input asp-for="Images" class="form-control-file" id="exampleFormControlFile1">
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>